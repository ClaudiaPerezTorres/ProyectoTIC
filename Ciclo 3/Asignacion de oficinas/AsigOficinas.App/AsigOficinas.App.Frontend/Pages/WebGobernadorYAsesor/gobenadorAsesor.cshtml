@page
@model AsigOficinas.App.Frontend.Pages.gobenadorAsesorModel
@{
}
<h2>Listado de gobenador y asesor</h2>
<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Identificacion</th>
            <th>Edad</th>
            <th>Estado COVID</th>
            <th>Diagnostico</th>
            <th>Oficina visitada</th>
        </tr>
    </thead>
    <tbody>
        <tr>
        @foreach (var asesor in Model.gobernadorYAsesors)
        {
            <tr>
                <td>@asesor.nombre</td>
                <td>@asesor.apellido</td>
                <td>@asesor.identificacion</td>
                <td>@asesor.edad</td>
                <td>@asesor.estadoCovid</td>
                <td>@asesor.diagnostico</td>
                <td>@asesor.oficinasVisitadas</td>
                <td>
                    <a class="btn btn-primary table-btn" asp-page="./DetallesgobenadorAsesor"
                    asp-route-idGobernadorYAsesor="@asesor.id">
                        <i class="bi bi-info-circle" aria-hidden="true"></i>
                        Detalle
                    </a>
                </td>
                <td>
                    <a class="btn btn-secondary table-btn" asp-page="./EditargobenadorAsesor"
                    asp-route-idGobernadorYAsesor="@asesor.id">
                        <i class="bi bi-pencil-square" aria-hidden="true"></i>
                        Editar
                    </a>
                </td>
                <td>
                    <a class="btn btn-danger table-btn" asp-page="./EliminargobenadorAsesor"
                    asp-route-idGobernadorYAsesor="@asesor.id">
                        <i class="bi bi-trash" aria-hidden="true"></i>
                        Eliminar
                    </a>
                </td>
            </tr>
        }
        </tr>
    </tbody>
</table>
<a class="btn btn-primary table-btn" asp-page="./EditargobenadorAsesor">
    <i class="bi bi-file-plus" aria-hidden="true"></i>
    Crear gobernador o asesor
</a>