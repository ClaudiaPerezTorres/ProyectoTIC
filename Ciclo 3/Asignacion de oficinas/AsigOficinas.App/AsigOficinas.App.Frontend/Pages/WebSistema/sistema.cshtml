@page
@model AsigOficinas.App.Frontend.Pages.sistemaModel
@{
}
<h2>Listado de sistemas</h2>
<table class="table">
    <thead>
        <tr>
            <th>Oficinas</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            @foreach (var sistema in Model.sistemas)
            {
            <tr>
                <td>@sistema.oficina</td>
                <td>
                    <a class="btn btn-primary table-btn" asp-page="./DetallesSistema" asp-route-idSistema="@sistema.id">
                        <i class="bi bi-info-circle" aria-hidden="true"></i>
                        Detalle
                    </a>
                </td>
                <td>
                    <a class="btn btn-secondary table-btn" asp-page="./EditarSistema" asp-route-idSistema="@sistema.id">
                        <i class="bi bi-pencil-square" aria-hidden="true"></i>
                        Editar
                    </a>
                </td>
                <td>
                    <a class="btn btn-danger table-btn" asp-page="./EliminarSistema" asp-route-idSistema="@sistema.id">
                        <i class="bi bi-trash" aria-hidden="true"></i>
                        Eliminar
                    </a>
                </td>
            </tr>
            }
        </tr>
    </tbody>
</table>
<a class="btn btn-primary table-btn" asp-page="./EditarSistema">
    <i class="bi bi-file-plus" aria-hidden="true"></i>
    Crear sistema
</a>