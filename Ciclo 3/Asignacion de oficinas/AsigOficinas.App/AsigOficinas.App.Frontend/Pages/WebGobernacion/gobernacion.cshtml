@page
@model AsigOficinas.App.Frontend.Pages.gobernacionModel
@{
}
<h2>Listado de gobernaciones</h2>
<table class="table">
    <thead>
        <tr>
            <th>Ubicación</th>
            <th>Dirección</th>
            <th>Telefono</th>
            <th>Sedes</th>
        </tr>
    </thead>
    <tbody>
        <tr>
        @foreach (var gobernacion in Model.gobernacions)
        {
            <tr>
                <td>@gobernacion.ubicacion</td>
                <td>@gobernacion.direccion</td>
                <td>@gobernacion.telefono</td>
                <td>@gobernacion.sedes</td>
                <td>
                    <a class="btn btn-primary table-btn" asp-page="./DetallesGobernacion"
                    asp-route-idGobernacion="@gobernacion.id">
                        <i class="bi bi-info-circle" aria-hidden="true"></i>
                        Detalle
                    </a>
                </td>
                <td>
                    <a class="btn btn-secondary table-btn" asp-page="./EditarGobernacion"
                    asp-route-idGobernacion="@gobernacion.id">
                        <i class="bi bi-pencil-square" aria-hidden="true"></i>
                        Editar
                    </a>
                </td>
                <td>
                    <a class="btn btn-danger table-btn" asp-page="./EliminarGobernacion"
                    asp-route-idGobernacion="@gobernacion.id">
                        <i class="bi bi-trash" aria-hidden="true"></i>
                        Eliminar
                    </a>
                </td>
            </tr>
        }
        </tr>
    </tbody>
</table>
<a class="btn btn-primary table-btn" asp-page="./EditarGobernacion">
    <i class="bi bi-file-plus" aria-hidden="true"></i>
    Crear gobernación
</a>