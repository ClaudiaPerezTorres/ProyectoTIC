@page
@model AsigOficinas.App.Frontend.Pages.SedeModel
@{
}
<h1>Listado de sedes</h1>
<table class="table">
    @foreach (var sede in Model.Sedes)
    {
        <tr>
            <td>@sede.nombre</td>
            <td>@sede.ubicacion</td>
            <td>
                <a class="btn btn-primary table-btn" asp-page="./DetallesSede" asp-route-idSede="@sede.id">
                    <i class="bi bi-info-circle" aria-hidden="true"></i>
                    Detalle
                </a>
            </td>
            <td>
                <a class="btn btn-secondary table-btn" asp-page="./EditarSede" asp-route-idSede="@sede.id">
                    <i class="bi bi-pencil-square" aria-hidden="true"></i>
                    Editar
                </a>
            </td>
            <td>
                <a class="btn btn-danger table-btn" asp-page="./EliminarSede" asp-route-idSede="@sede.id">
                    <i class="bi bi-trash" aria-hidden="true"></i>
                    Eliminar
                </a>
            </td>
        </tr>
    }
</table>
<a class="btn btn-primary table-btn" asp-page="./EditarSede">
    <i class="bi bi-file-plus" aria-hidden="true"></i>
    Crear sede
</a>