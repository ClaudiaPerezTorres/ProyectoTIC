@page
@model AsigOficinas.App.Frontend.Pages.EditarOficinaModel
@{
}
<h2>Editar oficina</h2>
<form method="post">
    <input type="hidden" asp-for="oficina.id">
    <div class="form-group">
        <label asp-for="oficina.numero"></label>
        <input asp-for="oficina.numero" class="form-control">
        <span class="text-danger" asp-validation-for="oficina.numero"></span>
    </div>
    <div class="form-group">
        <label asp-for="oficina.aforo"></label>
        <input asp-for="oficina.aforo" class="form-control">
        <span class="text-danger" asp-validation-for="oficina.aforo"></span>
    </div>
    <div class="form-group">
        <label asp-for="oficina.horaLaboral"></label>
        <input asp-for="oficina.horaLaboral" class="form-control">
        <span class="text-danger" asp-validation-for="oficina.horaLaboral"></span>
    </div>
    <div class="form-group">
        <label asp-for="oficina.numeroPersonas"></label>
        <input asp-for="oficina.numeroPersonas" class="form-control">
        <span class="text-danger" asp-validation-for="oficina.numeroPersonas"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
</form>